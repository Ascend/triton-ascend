---
BasedOnStyle: LLVM
Language: Cpp

# 大括号换行风格配置
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: false          # 类定义后不换行
  AfterControlStatement: MultiLine  # 控制语句后多行时换行
  AfterEnum: false           # 枚举定义后不换行
  AfterFunction: true        # 函数定义后换行（K&R风格）
  AfterNamespace: false      # 命名空间后不换行
  AfterObjCDeclaration: false
  AfterStruct: false         # 结构体定义后不换行
  AfterUnion: false          # 联合体定义后不换行
  AfterExternBlock: false
  BeforeCatch: false
  BeforeElse: false          # else前不换行
  BeforeLambdaBody: false    # lambda体前不换行
  BeforeWhile: false
  IndentBraces: false
  SplitEmptyFunction: true   # 空函数体可以放在一行
  SplitEmptyRecord: true     # 空记录可以放在一行
  SplitEmptyNamespace: true  # 空命名空间可以放在一行

# 其他相关配置
AllowShortBlocksOnASingleLine: Empty  # 只有空块可以放在一行
AllowShortFunctionsOnASingleLine: Inline  # 内联函数可以放在一行
AllowShortIfStatementsOnASingleLine: Never    # if语句不允许单行
AllowShortLoopsOnASingleLine: false           # 循环不允许单行

# Lambda表达式配置
LambdaBodyIndentation: Signature  # lambda体与签名对齐
PointerAlignment: Right           # 指针和引用靠右
SpaceBeforeParens: ControlStatements  # 控制语句括号前加空格
SpaceInEmptyParentheses: false    # 空括号内不加空格
SpacesInAngles: Never             # 模板尖括号内不加空格
SpacesInCStyleCastParentheses: false  # C风格转换括号内不加空格
SpacesInContainerLiterals: true   # 容器字面量内加空格
SpacesInParentheses: false        # 普通括号内不加空格
SpacesInSquareBrackets: false     # 方括号内不加空格

# 初始化列表配置
Cpp11BracedListStyle: true        # 使用C++11大括号初始化风格
SpaceBeforeCpp11BracedList: true   # 大括号列表前加空格
SpaceInEmptyBlock: false           # 空块内不加空格

# 缩进配置
IndentWidth: 4                    # 缩进宽度
IndentCaseLabels: true      # case/default 相对于 switch 缩进
IndentCaseBlocks: true      # case 块内的语句再缩进一层
TabWidth: 4
UseTab: Never                     # 不使用tab

# 其他格式配置
ColumnLimit: 120                   # 行宽限制
